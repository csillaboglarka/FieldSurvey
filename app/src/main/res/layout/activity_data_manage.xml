<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Profile">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp">

    <Button
        android:id="@+id/signOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="signOut"
        android:text="@string/signout"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btnaddplant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/signOut"
        android:onClick="addPlant"
        android:layout_centerHorizontal="true"
        android:text="@string/btnAddPlant"
      />

    <Button
        android:id="@+id/btnaddfurniture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnaddplant"
        android:onClick="addFurniture"
        android:layout_centerHorizontal="true"
        android:text="@string/btnAddFurniture"
        />
        <EditText
            android:id="@+id/etNewProject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnaddfurniture"
            android:layout_centerHorizontal="true"
         />

        <Button
            android:id="@+id/btnNewProject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/etNewProject"
            android:layout_centerHorizontal="true"
            android:onClick="CreateNewProject"
            android:text="Create Project" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_projects"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/btnNewProject"
            android:layout_marginTop="22dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>